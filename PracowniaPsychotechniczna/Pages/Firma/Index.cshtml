@page
@model PracowniaPsychotechniczna.Pages.Frima.IndexModel

@{
    ViewData["Title"] = "Firmy";
}

<h2>Firmy</h2>

<p>
    <a asp-page="Create">Nowa</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Firma[0].Nazwa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Firma[0].Adres)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Firma[0].Nip)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Firma) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nip)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edytuj</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
