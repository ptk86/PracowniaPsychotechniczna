@page
@model PracowniaPsychotechniczna.Pages.Faktura.CreateFakturaModel

<h2>Nowa Faktura</h2>
<hr />
<table style="width:80%">
    <tr>
        <th>Sprzedawca</th>
        <th>Nabywca</th>
    </tr>
    <tr>
        <td>
            @Html.DisplayTextFor(m => m.Faktura.Sprzedawca.Nazwa)
        </td>
        <td>
            @Html.DisplayTextFor(m => m.Faktura.Nabywca.Nazwa)
        </td>
    </tr>
    <tr>
        <td>
            @Html.DisplayTextFor(m => m.Faktura.Sprzedawca.Adres)
        </td>
        <td>
            @Html.DisplayTextFor(m => m.Faktura.Nabywca.Adres)
        </td>
    </tr>
    <tr>
        <td>
            @Html.DisplayTextFor(m => m.Faktura.Sprzedawca.Nip)
        </td>
        <td>
            @Html.DisplayTextFor(m => m.Faktura.Nabywca.Nip)
        </td>
    </tr>
</table>
<hr />
<table style="width:80%">
    <thead>
        <tr>
            <th>
                Usługa
            </th>
            <th>
            </th>
            <th>
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Faktura.Badania[0].Cena)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Faktura.Badania)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Imie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nazwisko)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Typ)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Cena),00 zł
                </td>
            </tr>
        }
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td class="text-right">
                --------------
            </td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td class="text-right">
                @Html.DisplayFor(modelItem => modelItem.Faktura.Suma),00 zł
            </td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td class="text-right">
                Słownie:  @Model.Faktura.SumeSlownie
            </td>
        </tr>

    </tbody>
</table>
<hr />
<div>
    Termin zapłaty:  @Model.Faktura.TerminZaplaty.ToString("d")
</div>
<div>
    Sposób zapłaty: przelew
</div>
<div>
    Nr konta: 8888 88888 88888 88888 88888
</div>
<hr />
<div>
    <form method="post">
        
        <div class="form-group">
            <input type="hidden" asp-for="Faktura.Nabywca.Id" class="form-control" />
        </div> 
        <div class="form-group">
            <input type="submit" value="Fakturuj" class="btn btn-success" />
        </div>
    </form>
</div>
<div>
    <a asp-page="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
